<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tech-Blogspot</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <header class="header">
    <h1 class="title">Blog</h1>
    {{#if logged_in}}
      <nav>
        <button class="btn" id="logout">Logout</button>
      </nav>
    {{/if}}
  </header>

  <main class="main">
    <div class="container">
      {{#each posts}}
        <article class="post">
          <h2>{{title}}</h2>
          <p>{{content}}</p>
          <footer class="post-footer">
            <span>Posted by {{author}} on {{date}}</span>
            <a href="#" class="comment-link" data-id="{{id}}">{{comment.length}} comments</a>
          </footer>
          <div class="comment" id="comment-{{id}}">
            {{#each comment}}
              <div class="comment">
                <h3>{{author}}</h3>
                <p>{{content}}</p>
              </div>
            {{/each}}
          </div>
          {{#if logged_in}}
            <form action="/posts/{{id}}/comments" method="POST" class="comment-form" id="comment-form-{{id}}">
              <textarea name="content" placeholder="Leave a comment"></textarea>
              <button type="submit">Submit</button>
            </form>
          {{/if}}
        </article>
      {{/each}}
    </div>
  </main>

  <footer class="footer">
    <p>&copy; Blog 2023</p>
  </footer>

  {{#if logged_in}}
    <script src="/js/logout.js"></script>
    <script src="/js/comment.js"></script>
  {{/if}}
</body>

</html>
